doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      nav
        a(href="/")
          img#logo(src="/images/logo.png")
        ul
          li
            a(href="/sign-up")
              button(type="button" class="button_small") Sign Up
          li
            a(href="/login")
              button(type="button" class="button_small") Login
          li
            a(href="/admin")
              button(type="button" class="button_small") Admin access

      .search_nav
        form(action="/results" method="POST")
          .input_wrapper
            label(for="destination") Destination
            input(type="text" id="destination" name="destination" required)
          .input_wrapper
            label(for="duration") Duration (nights)
            input(type="text" id="duration" name="duration" required)
          .input_wrapper
            label(for="departure-date") Departure date
            input(type="date" id="departure-date" name="dateOfDeparture" required)
          .input_wrapper
            label(for="number-guests") Number of guests
            input(type="number" id="number-guests" name="numberOfGuests" min=1 required)
          .input_wrapper
            select(name="stars")
              option(value="1") Min 1 star
              option(value="2") Min 2 stars
              option(value="3") Min 3 stars
              option(value="4") Min 4 stars
              option(value="5") Min 5 stars
          .input_wrapper 
            select(name="sort")
              option(value="1") Price: Low - High
              option(value="-1") Price: High - Low
          .input_wrapper
            button(type="submit") SEARCH!
      img(src="/images/beach.jpg")
    block content
